<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>

   <extension
         id="application"
         point="org.eclipse.core.runtime.applications">
      <application
            thread="main">
         <run
               class="net.dumbframework.tools.atlasmaker.internal.Application">
         </run>
      </application>
   </extension>
   <extension
         point="org.eclipse.ui.perspectives">
      <perspective
            name="Perspective"
            class="net.dumbframework.tools.atlasmaker.internal.Perspective"
            id="AtlasMaker.perspective">
      </perspective>
   </extension>
   <extension
         point="org.eclipse.ui.views">
      <view
            name="ImageViewer"
            class="net.dumbframework.tools.atlasmaker.internal.ImageViewer"
            id="ATLASMAKER_IMAGE_VIEWER">
      </view>
   </extension>
   <extension
         point="org.eclipse.ui.menus">
      <menuContribution
            locationURI="menu:org.eclipse.ui.main.menu">
         <menu
               label="File">
            <command
                  commandId="org.eclipse.ui.file.exit"
                  label="Exit">
            </command>
         </menu>
      </menuContribution>
   </extension>
   <extension
         id="product"
         point="org.eclipse.core.runtime.products">
      <product
            application="AtlasMaker.application"
            name="AtlasMaker">
         <property
               name="appName"
               value="AtlasMaker">
         </property>
      </product>
   </extension>
   <extension
         point="org.eclipse.ui.perspectiveExtensions">
      <perspectiveExtension
            targetID="*">
         <view
               id="ATLASMAKER_IMAGE_VIEWER"
               minimized="false"
               relationship="stack">
         </view>
      </perspectiveExtension>
   </extension>

</plugin>
